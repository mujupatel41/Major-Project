<%- layout("/layouts/boilerplate.ejs") %>
<body>
    

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h4>Create New Listing</h4>
            <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input required type="text" name="listing[title]" class="form-control" id="title" placeholder="Enter Title">
                    <div class="valid-feedback">Title looks good!</div>
                </div>
    
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea required name="listing[description]" class="form-control"  placeholder="Enter Description" id="description"></textarea>
                    <div class="invalid-feedback">Please enter a short description</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" required class="form-control" name="listing[image]" id="image" placeholder="Enter Image URL">
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Choose Category</label>
                    <p style="opacity: 0.6; font-size: 0.8rem;"><b>Single Choose</b> : Click &nbsp; <b>Multiple Choose :</b> Ctrl + Click</p>
                    <select class="form-select border border-black border-opacity-50 mb-2" name="listing[category]" multiple required aria-label="multiple select example" style="font-size: .95rem;">
                        <option selected value="castles">Castels</option>
                        <option value="trending">Trending</option>
                        <option value="rooms">Rooms</option>
                        <option value="beach">Beach</option>
                        <option value="topoftheworld">Top of the world</option>
                        <option value="countryside">Countryside</option>
                        <option value="pools">Pools</option>
                        <option value="omg">OMG</option>
                        <option value="lake">Lake</option>
                        <option value="camping">Camping</option>
                        <option value="fariming">Farming</option>
                        <option value="views">Views</option>
                        <option value="treehouse">Treehouse</option>
                        <option value="design">Design</option>
                        <option value="tropical">Tropical</option>
                        <option value="tinyhouse">Tiny House</option>
                        <option value="nationalpark">National Park</option>
                        <option value="luxe">Luxe</option>
                        <option value="cabins">Cabins</option>
                        <option value="iconic">Iconic</option>
                        <option value="earthhomes">Earth Homes</option>
                      </select>
                </div>

                <div class="row">

                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" required class="form-control" name="listing[price]" id="price" placeholder="1200">   
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label" >Country</label>
                        <input required type="text" class="form-control" name="listing[country]" id="country" placeholder="India">
                        <div class="invalid-feedback">Country name should be valid</div>
                    </div>

                </div>
    
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input required type="text" class="form-control" name="listing[location]" id="location" placeholder="Delhi">
                    <div class="invalid-feedback">Location should be valid</div>
                </div>
    
                <button class="btn btn-dark add-btn mt-3">Create Listing</button>
            </form>
        </div>
    </div>
</body>